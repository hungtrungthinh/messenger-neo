{
  "name": "messenger-neo",
  "private": true,
  "description": "A privacy-focused Messenger client",
  "author": "Messenger Neo Team <support@boringlab.site>",
  "version": "0.1.0",
  "main": "dist-electron/main.js",
  "type": "module",
  "build": {
    "appId": "com.messenger.neo",
    "productName": "Messenger Neo",
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ],
      "artifactName": "latest-${arch}.${ext}",
      "icon": "public/icons/icon.png",
      "publish": {
        "provider": "generic",
        "url": "https://download.boringlab.site/apps/messenger-neo/mac/"
      }
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "appx",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "icon": "public/icons/icon.png",
      "publish": {
        "provider": "generic",
        "url": "https://download.boringlab.site/apps/messenger-neo/win/"
      }
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "artifactName": "latest-${arch}.${ext}",
      "icon": "public/icons/icon.png",
      "category": "Network",
      "publish": {
        "provider": "generic",
        "url": "https://download.boringlab.site/apps/messenger-neo/linux/"
      }
    },
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hungtrungthinh/messenger-neo.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "preview": "vite preview",
    "electron:dev": "concurrently -k \"vite\" \"wait-on tcp:5173 && tsc -p electron/tsconfig.json && electron .\""
  },
  "dependencies": {
    "electron-store": "^11.0.2",
    "electron-updater": "^6.6.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "concurrently": "^9.1.0",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "jsdom": "^27.3.0",
    "typescript": "~5.8.3",
    "vite": "^7.0.4",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vitest": "^4.0.16",
    "wait-on": "^8.0.1"
  }
}